@page
@model RazorPagesToDoList.Pages.ToDoNotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].DutyHolder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].InProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoNote[0].Done)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ToDoNote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DutyHolder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
